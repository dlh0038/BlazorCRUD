@page "/contosouniversity"
@inject NavigationManager NavigationManager
<h1>Contoso University</h1>

<h2>Students</h2>
<div class="form-group">
    <input type="submit" value="View Students" @onclick="@NavigateToStudents" class="btn btn-primary" />
</div>
<br>
<h2>Courses</h2>
<div class="form-group">
    <input type="submit" value="View Courses" @onclick="@NavigateToCourses" class="btn btn-primary" />
    <input type="submit" value="View Students By Specific Course" @onclick="@NavigateToCoursesearch" class="btn btn-primary" />
</div>
<br>
<h2>Enrollment</h2>
<div class="form-group">
    <input type="submit" value="View Enrollments" @onclick="@NavigateToEnrollments" class="btn btn-primary" />
    <input type="submit" value="View Enrollment By Specific Student" @onclick="@NavigateToEnrollmentsearch" class="btn btn-primary" /> 
    
</div>



@code{
    void NavigateToStudents(){
        NavigationManager.NavigateTo("/student");
    }
    void NavigateToCourses(){
        NavigationManager.NavigateTo("/course");
    }
    void NavigateToEnrollments(){
        NavigationManager.NavigateTo("/enrollment");
    }
    void NavigateToEnrollmentsearch(){
        NavigationManager.NavigateTo("/enrollmentstudentsearch");
    }
    void NavigateToCoursesearch(){
        NavigationManager.NavigateTo("/courseenrollment");
    }
}